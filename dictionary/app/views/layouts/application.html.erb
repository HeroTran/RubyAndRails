<!DOCTYPE html>
<html>
    <head>
        <title>Admin</title>
        <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
        <script data-turbolinks-track="true" src="/assets/application.js?body=1"></script>
        <script data-turbolinks-track="true" src="/assets/jquery.js?body=1"></script>
        <script data-turbolinks-track="true" src="/assets/jquery_ujs.js?body=1"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <%= csrf_meta_tags %>
        <%= csrf_meta_tags %>

    </head>
    <body>
        <div id="content">
            <% if current_user %>
            <div style="background: #44C767;">
                <ul id="nav">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <%= link_to "Users", users_path %>
                    </li>
                    <li id="sub">
                        <%= link_to "Japanese",japaneses_path %>
                    </li>
                    <li>
                        <%= link_to "Vietnamese", vietnameses_path %>

                    </li>
                    <li>
                        <%= link_to "Example", examples_path %>
                    </li>
                </ul>
            </div>
            <div>
                <h4 style="float: left; padding-left:  40px; position: absolute;">Welcome to <%= current_user%>&nbsp;<%= link_to "Sign Out",sign_out_path %></h4>
            </div>
            <br />
            <br />

            <% else %>
            <%= link_to "Sign In", sign_in_path %>
            <% end %>
            <%= yield %>
        </div>
    </body>
</html>
